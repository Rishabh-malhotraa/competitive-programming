{
   "tasks": [
      {
         "label": "show local readme rendered",
         "type": "shell",
         "command": "open ./README.md -a Microsoft\\ Edge",
         "group": "build",
         "presentation": {
            "reveal": "never",
         },
         "problemMatcher": []
      },
      {
         "label": "open problem statement",
         "type": "shell",
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "command": "./scripts/open-problem-statement.sh",
         "args": [
            "${relativeFileDirname}",
            "${fileBasenameNoExtension}"
         ],
         "group": "build",
         "presentation": {
            "reveal": "never",
         },
         "problemMatcher": [],
      },
      {
         "label": "compine and run",
         "group": "build",
         "type": "shell",
         "command": "./scripts/compile-and-run.sh",
         "args": [
            "${relativeFile}"
         ],
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      },
      {
         "label": "mark as solved",
         "type": "shell",
         "command": "./scripts/mark-problem-as-solved.sh",
         "args": [
            "${relativeFileDirname}",
            "${fileBasename}"
         ],
         "group": "build",
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      },
      {
         "label": "quick submit",
         "type": "shell",
         "command": "./scripts/quick-submit.sh",
         "args": [
            "${relativeFileDirname}"
         ],
         "group": "build",
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      },
      {
         "label": "create new problem",
         "type": "shell",
         "command": "./scripts/create-new-problem.sh",
         "args": [
            "${input:judge-name}",
            "${input:problem-id}",
         ],
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "group": "build",
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      }
   ],
   "inputs": [
      {
         "id": "judge-name",
         "description": "Select the folder",
         "type": "pickString",
         "options": [
            "codeforces",
            "uva",
            "uri",
            "spoj",
            "code-jam",
            "live-archive"
         ],
      },
      {
         "id": "problem-id",
         "description": "Insert the file name",
         "type": "promptString",
      }
   ]
}