{
	"tasks": [
      {
         "label": "compile and run",
         "type": "shell",
         "command": "g++ ${relativeFile} -std=gnu++14 -O2 -lm -o e && ./e < input.in > output.out",
         "group": "build",
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "presentation": {
            "reveal": "silent",
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "mark as solved and push",
         "type": "shell",
         "command": "./_scripts/run-auto-scripts.sh && ./_scripts/problem-solved.sh \"${relativeFileDirname}\" \"${fileBasenameNoExtension}\"",
         "group": "build",
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "presentation": {
            "reveal": "silent",
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "open problem url",
         "type": "shell",
         "command": "FILE=\"${fileBasenameNoExtension}\" && open \"$BASE_URL_${relativeFileDirname}\"\"${${FILE}/-//}\"",
         "group": "build",
         "options": {
            "cwd": "${workspaceFolder}",
            "env": {
               "BASE_URL_codeforces": "https://codeforces.com/problemset/problem/",
               "BASE_URL_spoj": "https://spoj.com/problems/",
               "BASE_URL_uri": "https://www.urionlinejudge.com.br/judge/problems/view/",
               "BASE_URL_uva": "https://vjudge.net/problem/uva-"
            }
         },
         "presentation": {
            "reveal": "silent",
            "clear": true
         },
         "problemMatcher": []
      },
   ]
}
