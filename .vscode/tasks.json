{
   "tasks": [
      {
         "label": "open description",
         "type": "shell",
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "command": "./_scripts/open-problem-description.sh",
         "args": [
            "${relativeFileDirname}",
            "${fileBasenameNoExtension}"
         ],
         "group": "build",
         "presentation": {
            "reveal": "never",
         },
         "problemMatcher": [],
      },
      {
         "label": "compine and run",
         "group": "build",
         "type": "shell",
         "command": "g++ ${relativeFile} -std=gnu++14 -O2 -lm -o e && ./e < e.in > e.out",
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      },
      {
         "label": "mark as solved",
         "type": "shell",
         "command": "./_scripts/mark-problem-as-solved.sh",
         "args": [
            "${relativeFileDirname}",
            "${fileBasenameNoExtension}"
         ],
         "group": "build",
         "options": {
            "cwd": "${workspaceFolder}",
         },
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      },
      {
         "label": "new problem",
         "type": "shell",
         "command": "./_scripts/create-new-problem.sh",
         "args": [
            "${input:judge-name}",
            "${input:problem-id}",
         ],
         "group": "build",
         "presentation": {
            "reveal": "silent",
            "clear": true,
            "showReuseMessage": false,
         },
         "problemMatcher": [],
      }
   ],
   "inputs": [
      {
         "id": "judge-name",
         "description": "Select the judge name",
         "type": "pickString",
         "options": [
            "uva",
            "codeforces",
            "uri",
            "spoj",
         ],
      },
      {
         "id": "problem-id",
         "description": "Insert the judge id",
         "type": "promptString",
      }
   ]
}